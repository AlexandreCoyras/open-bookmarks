{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --local --env development",
		"dev:remote": "wrangler dev --env development",
		"dev:bun": "bun run --hot src/index.ts",
		"start": "bun run dist/src/index.js",
		"db:generate": "drizzle-kit generate",
		"db:apply:local": "wrangler d1 migrations apply DB --local --env development",
		"db:apply:prod": "wrangler d1 migrations apply DB",
		"db:list:local": "wrangler d1 migrations list DB --local --env development",
		"db:list:prod": "wrangler d1 migrations list DB",
		"deploy": "wrangler deploy"
	},
	"dependencies": {
		"dotenv": "^16.4.7",
		"zod": "^3.25.16",
		"@trpc/server": "^11.0.0",
		"@trpc/client": "^11.0.0",
		"@hono/trpc-server": "^0.3.4",
		"hono": "^4.7.6",
		"drizzle-orm": "^0.38.4",
		"pg": "^8.14.1",
		"ai": "^4.3.16",
		"@ai-sdk/google": "^1.2.3",
		"better-auth": "^1.2.9"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241218.0",
		"@types/bun": "^1.2.6",
		"@types/pg": "^8.11.11",
		"better-sqlite3": "^11.10.0",
		"drizzle-kit": "^0.30.5",
		"tsc-alias": "^1.8.11",
		"typescript": "^5.8.2",
		"wrangler": "^3.114.9"
	}
}
